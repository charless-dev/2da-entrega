{{>header}}

<section class="container">
	{{{infoInscritosCursos}}}
</section>
<span class="container border-top my-3 d-block"></span>
<section class="container">
	<form action="/inscritos-cursos" method="post">
		<div class="row">
			<div class="col-12">
				<div class="form-group">
                    <label>Seleccione un curso para cambiar su estado a cerrado:</label>
					<select class="form-control" name="curso">
						<option selected="selected">Seleccionar</option>
						{{{listadoCursos}}}
					</select>
				</div>
			</div>
		</div>		
		<div class="row">
			<div class="col-12">	
				<button class="btn btn-primary">Cerrar Curso</button>		
			</div>
		</div>					
	</form>
</section>

